@model Exercises.Models.Data.State
@{
				/**/

				ViewBag.Title = "EditState";
}

<div class="row">
	<div class="col-xs-12">
		<h2>Edit State</h2>
		@Html.ActionLink("Return to List", "States", "Admin")
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		@using (Html.BeginForm())
		{
			@Html.HiddenFor(m => m.StateAbbreviation);

			<div class="form-group">
				<label>State Name</label>
				@Html.TextBoxFor(m => m.StateName, new { @class = "form-control", placeholder = "State Name" })

				<label>State Abbreviation</label>
				@Html.TextBoxFor(m => m.EditIDStateAbbreviation, new { @class = "form-control", placeholder = "State Abbreviation" })
			</div>
			<button type="submit" class="btn btn-sm btn-primary">Save</button>
		}
	</div>
</div>
